<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Feedback">

    <Button
        android:id="@+id/btnContact"
        android:layout_width="244dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="@string/btnContact"
        android:textAllCaps="true"
        app:backgroundTint="@color/primarybtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/btnSupportService"
        android:layout_width="244dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:text="@string/btnSupportservice"
        android:textAllCaps="true"
        app:backgroundTint="@color/primarybtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnContact" />

    <Button
        android:id="@+id/btnSupportService2"
        android:layout_width="244dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:text="@string/btnDev"
        android:textAllCaps="true"
        app:backgroundTint="@color/primarybtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSupportService"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/userfeedback"
        android:textColor="#272525"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="411dp"
        android:layout_height="227dp"
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btnContact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFeedback">

        <TextView
            android:id="@+id/txtFeedbackUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"

            android:text="@string/feedbackUserName" />

        <TextView
            android:id="@+id/txtFeedbackUserMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:text="@string/feedbackUserMail" />

        <TextView
            android:id="@+id/txtUserFeedback"
            android:layout_width="306dp"
            android:layout_height="90dp"
            android:layout_margin="@dimen/fab_margin"
            android:text="@string/feedback" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>