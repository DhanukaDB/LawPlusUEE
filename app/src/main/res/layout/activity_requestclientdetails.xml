<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/etm_requestBody"
        android:layout_width="334dp"
        android:layout_height="176dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="     Type your Message here"
        android:inputType="textMultiLine"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <Button
        android:id="@+id/btn_requestClientDetails"
        android:layout_width="230dp"
        android:layout_height="54dp"
        android:layout_marginTop="56dp"
        android:onClick="RequestClientDetails"
        android:text="@string/btnrequestclientdetails"
        app:backgroundTint="@color/secondarybtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etm_requestBody" />

    <TextView
        android:id="@+id/tvRequestClientDetails"
        android:layout_width="263dp"
        android:layout_height="41dp"
        android:layout_marginTop="44dp"
        android:text="@string/tvRequestClientDetails"
        android:textColor="#0C0C0C"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.304"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="143dp"
        android:layout_height="35dp"
        android:layout_marginTop="44dp"
        android:text="Request Body:"
        android:textColor="#0C0C0C"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="105dp"
        android:layout_height="46dp"
        android:layout_marginTop="56dp"
        android:text="Name:"
        android:textColor="#0C0C0C"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/et_volunteerName"
        app:layout_constraintHorizontal_bias="0.789"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRequestClientDetails" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="105dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:text="Email:"
        android:textColor="#0C0C0C"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/et_volunteerEmail"
        app:layout_constraintHorizontal_bias="0.781"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <EditText
        android:id="@+id/et_volunteerName"
        android:layout_width="219dp"
        android:layout_height="58dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="Volunteer Name"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_volunteerEmail"
        android:layout_width="215dp"
        android:layout_height="59dp"
        android:layout_marginEnd="36dp"
        android:ems="10"
        android:hint="Volunteer Email"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView13"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>