<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/etm_requestBody"
        android:layout_width="327dp"
        android:layout_height="197dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="     Type your Message here"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <Button
        android:id="@+id/btn_requestClientDetails"
        android:layout_width="258dp"
        android:layout_height="70dp"
        android:layout_marginTop="76dp"
        android:text="@string/btnrequestclientdetails"
        app:backgroundTint="@color/primarybtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etm_requestBody" />

    <TextView
        android:id="@+id/tvRequestClientDetails"
        android:layout_width="263dp"
        android:layout_height="41dp"
        android:layout_marginTop="36dp"
        android:text="@string/tvRequestClientDetails"
        android:textColor="#0C0C0C"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.29"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="143dp"
        android:layout_height="35dp"
        android:layout_marginTop="28dp"
        android:text="Request Body:"
        android:textColor="#0C0C0C"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.171"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="103dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:text="Name:"
        android:textColor="#0C0C0C"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/et_volunteerName"
        app:layout_constraintHorizontal_bias="0.661"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRequestClientDetails" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="105dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:text="Email:"
        android:textColor="#0C0C0C"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/et_volunteerEmail"
        app:layout_constraintHorizontal_bias="0.836"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <EditText
        android:id="@+id/et_volunteerName"
        android:layout_width="219dp"
        android:layout_height="58dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Volunteer Name"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_volunteerEmail"
        android:layout_width="215dp"
        android:layout_height="59dp"
        android:layout_marginEnd="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Volunteer Email"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView13"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>